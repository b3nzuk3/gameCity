{
  "redirects": [
    {
      "source": "/((?!api).*)",
      "has": [
        {
          "type": "host",
          "value": "www.gamecityelectronics.com"
        }
      ],
      "destination": "https://www.gamecityelectronics.co.ke/$1",
      "permanent": true
    },
    {
      "source": "/((?!api).*)",
      "has": [
        {
          "type": "host",
          "value": "gamecityelectronics.com"
        }
      ],
      "destination": "https://www.gamecityelectronics.co.ke/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/product/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|WhatsApp|Twitterbot|Slackbot|Discordbot|LinkedInBot|TelegramBot|facebook|twitter|linkedin|whatsapp|telegram|discord|slack|bot|crawler|spider|scraper).*"
        }
      ],
      "destination": "/api/og-product?slug=:slug"
    },
    {
      "source": "/product/:slug",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "text/html"
        }
      ],
      "destination": "/api/og-product?slug=:slug"
    },
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml" },
    {
      "source": "/debug-whatsapp/:slug",
      "destination": "/api/debug-whatsapp?slug=:slug"
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/api/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "unsafe-none"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin-allow-popups"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ]
}
